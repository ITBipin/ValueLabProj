using Microsoft.AspNetCore.Mvc;
using ValueLabProj.CodeChallenge.Models;
using Logic = ValueLabProj.CodeChallenge.Logic;

namespace ValueLabProj.Controllers
{
    [ApiController]
    [Route("api/v1/organizations/{organizationId}/[controller]")]
    public class MessagesController : ControllerBase
    {
        private readonly Logic.IMessageLogic _logic;

        public MessagesController(Logic.IMessageLogic logic)
        {
            _logic = logic;
        }

        [HttpGet]
        public ActionResult<IEnumerable<Message>> GetAll(Guid organizationId)
        {
            var result = _logic.GetAll(organizationId);
            return Ok(result);
        }

        [HttpGet("{id}")]
        public ActionResult<Message> Get(Guid organizationId, Guid id)
        {
            var res = _logic.GetById(organizationId, id);
            if (res == null) return NotFound();
            return Ok(res);
        }

        [HttpPost]
        public ActionResult Create(Guid organizationId, [FromBody] Message msg)
        {
            msg.OrganizationId = organizationId;
            var res = _logic.Create(msg);
            return res switch
            {
                Logic.CreatedResult<Message> c => CreatedAtAction(nameof(Get), new { organizationId = organizationId, id = c.Value.Id }, c.Value),
                Logic.ValidationErrorResult ve => BadRequest(ve.Errors),
                Logic.ConflictResult cr => Conflict(cr.Text),
                _ => StatusCode(500)
            };
        }

        [HttpPut("{id}")]
        public ActionResult Update(Guid organizationId, Guid id, [FromBody] Message msg)
        {
            msg.Id = id;
            msg.OrganizationId = organizationId;
            var res = _logic.Update(msg);
            return res switch
            {
                Logic.SuccessResult _ => NoContent(),
                Logic.NotFoundResult _ => NotFound(),
                Logic.ValidationErrorResult ve => BadRequest(ve.Errors),
                Logic.ConflictResult cr => Conflict(cr.Text),
                _ => StatusCode(500)
            };
        }

        [HttpDelete("{id}")]
        public ActionResult Delete(Guid organizationId, Guid id)
        {
            var res = _logic.Delete(organizationId, id);
            return res switch
            {
                Logic.SuccessResult _ => NoContent(),
                Logic.NotFoundResult _ => NotFound(),
                Logic.ValidationErrorResult ve => BadRequest(ve.Errors),
                _ => StatusCode(500)
            };
        }
    }
}
